import java.util.Scanner;
class Main {
    public static void main(String[] args) {
        Scanner in=new Scanner(System.in);
        int n=in.nextInt();
        for(int i=1;i<=n;i++){
            for(int j=n-i+1; j>=1;j--){
                System.out.print(j);
            }
            System.out.println("");
        }
    }
}

